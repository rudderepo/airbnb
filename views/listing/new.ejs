<% layout('/layout/boilerplate') -%>

    <body>
        <div class="row">
            <div class="col-8 offset-2">
                <h3>Create A New Listing</h3>
                <form method="post" novalidate class="needs-validation" action="/listing/addnew" enctype="multipart/form-data">
                    <div class="mb-3"><label class="form-label" for="title">Title</label>
                        <input id="title" type="text" class="form-control" required name="listing[title]"
                            placeholder="Enter Title">
                        <div class="invalid-feedback">please choose your text</div>
                        <div class="valid-feedback">Looks Good</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="description">Describe</label>
                        <textarea id="description" required name="listing[description]" class="form-control"
                            placeholder="description"></textarea>
                        <div class="invalid-feedback">please Describe</div>
                        <div class="valid-feedback">Good Description</div>

                    </div>

                    <div class="mb-3">
                        <label class="form-label" for="image">Listing Image</label>
                        <input id="image" type="file" class="form-control" name="listing[image]">
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label class="form-label" for="price">Price</label>
                                <input id="price" required type="number" class="form-control" placeholder="price"
                                    name="listing[price]">
                                <div class="invalid-feedback">Set Price</div>
                                <div class="valid-feedback">Price is Good</div>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="mb-3">
                                <label class="form-label" for="location">Location</label>
                                <input id="location" required type="text" class="form-control" placeholder="Location"
                                    name="listing[location]">
                                <div class="invalid-feedback">Enter Your Location</div>
                                <div class="valid-feedback">Location</div>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label" for="country">Country</label>
                        <input id="country" required type="text" class="form-control" placeholder="country"
                            name="listing[country]">
                        <div class="invalid-feedback">please choose your text</div>
                        <div class="valid-feedback">Country</div>
                    </div>
                    <button style="text-align: center;" class="btn btn-danger" type="submit">ADD</button>
                    <br><br>
                </form>
            </div>

        </div>

    </body>