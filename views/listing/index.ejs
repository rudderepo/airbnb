<% layout('/layout/boilerplate') -%>

    <body>
        <h3>ALL Listings</h3>
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mb-4">
            <%for(let listing of allListings){%>
                <a class="listing-link animate__animated animate__fadeIn" href="/listing/<%=listing._id%>">
                    <div class="card col" style="width: auto">
                        <img src="<%=listing.image.url%>" class="card-img-top" alt="<%=listing.title%>"
                            style="height:20rem">
                        <div class="card-img-overlay">
                            <h5 class="card-title"></h5>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">
                                <%=listing.title%>
                            </h5>
                            <p class="card-text description">
                                <%=listing.description%>
                            </p>
                            <p class="price">&#8377;<%=listing.price.toLocaleString("en-IN")%>/night</p>
                        </div>
                    </div>
                </a>

                <%}%>
        </div>

    </body>